--// JoshhubScript Control Panel (Full Features)
--// Owner: JoshroxasScript

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local UIS = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

--// ========= AUTO ACCEPT SETUP =========
local acceptEvent = ReplicatedStorage:WaitForChild("GameEvents"):WaitForChild("AcceptPetGift")
local AcceptedGifts = {}
getgenv().AutoAccept = false

acceptEvent.OnClientEvent:Connect(function(sender, pet)
    if getgenv().AutoAccept then
        if not AcceptedGifts[sender.UserId] then
            AcceptedGifts[sender.UserId] = true
            acceptEvent:FireServer(sender, true)
            warn("âœ… Auto accepted gift from:", sender.Name)
        end
    end
end)

--// ========= MOVEMENT HACKS =========
LocalPlayer.CharacterAdded:Connect(function(char)
    task.wait(1)
    char:WaitForChild("Humanoid").WalkSpeed = 150
end)

-- Speed always on
RunService.RenderStepped:Connect(function()
    if LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Humanoid") then
        LocalPlayer.Character:FindFirstChildOfClass("Humanoid").WalkSpeed = 150
    end
end)

-- Noclip always on
RunService.Stepped:Connect(function()
    if LocalPlayer.Character then
        for _, part in pairs(LocalPlayer.Character:GetChildren()) do
            if part:IsA("BasePart") then
                part.CanCollide = false
            end
        end
    end
end)

-- Infinite Jump always on
UIS.JumpRequest:Connect(function()
    if LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Humanoid") then
        LocalPlayer.Character:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping")
    end
end)

--// ========= MAIN GUI =========
local ScreenGui = Instance.new("ScreenGui", game:GetService("CoreGui"))
ScreenGui.Name = "JoshhubCP"

local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 450, 0, 300)
MainFrame.Position = UDim2.new(0.25, 0, 0.2, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
MainFrame.Active = true
MainFrame.Draggable = true
MainFrame.Parent = ScreenGui

Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 12)

local Title = Instance.new("TextLabel", MainFrame)
Title.Size = UDim2.new(1, 0, 0, 28)
Title.BackgroundTransparency = 1
Title.Text = "ðŸ”¥ Joshhub Control Panel â€“ Full Features"
Title.TextColor3 = Color3.fromRGB(255, 200, 120)
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 16

-- AutoAccept toggle
local AutoBtn = Instance.new("TextButton", MainFrame)
AutoBtn.Size = UDim2.new(0, 120, 0, 28)
AutoBtn.Position = UDim2.new(0, 10, 0, 35)
AutoBtn.BackgroundColor3 = Color3.fromRGB(50, 100, 50)
AutoBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
AutoBtn.Font = Enum.Font.SourceSansBold
AutoBtn.TextSize = 14
AutoBtn.Text = "Auto Accept: OFF"
Instance.new("UICorner", AutoBtn).CornerRadius = UDim.new(0, 6)

AutoBtn.MouseButton1Click:Connect(function()
    getgenv().AutoAccept = not getgenv().AutoAccept
    AutoBtn.Text = "Auto Accept: " .. (getgenv().AutoAccept and "ON" or "OFF")
    AutoBtn.BackgroundColor3 = getgenv().AutoAccept and Color3.fromRGB(100,200,100) or Color3.fromRGB(200,80,80)
end)

--// ========= TELEPORT LIST =========
local TeleportTitle = Instance.new("TextLabel", MainFrame)
TeleportTitle.Text = "Teleport Players"
TeleportTitle.Size = UDim2.new(0, 200, 0, 20)
TeleportTitle.Position = UDim2.new(0, 10, 0, 70)
TeleportTitle.BackgroundTransparency = 1
TeleportTitle.TextColor3 = Color3.fromRGB(255,255,255)
TeleportTitle.Font = Enum.Font.SourceSansBold
TeleportTitle.TextSize = 14

local TeleportList = Instance.new("ScrollingFrame", MainFrame)
TeleportList.Size = UDim2.new(0, 200, 0, 200)
TeleportList.Position = UDim2.new(0, 10, 0, 95)
TeleportList.BackgroundColor3 = Color3.fromRGB(30,30,30)
TeleportList.ScrollBarThickness = 4
Instance.new("UICorner", TeleportList).CornerRadius = UDim.new(0,6)

local TeleportLayout = Instance.new("UIListLayout", TeleportList)
TeleportLayout.Padding = UDim.new(0,3)

local function refreshTeleport()
    for _, c in pairs(TeleportList:GetChildren()) do
        if c:IsA("TextButton") then c:Destroy() end
    end
    for _, plr in pairs(Players:GetPlayers()) do
        if plr ~= LocalPlayer then
            local Btn = Instance.new("TextButton", TeleportList)
            Btn.Size = UDim2.new(1,-5,0,22)
            Btn.Text = "Teleport to "..plr.DisplayName
            Btn.BackgroundColor3 = Color3.fromRGB(70,70,120)
            Btn.TextColor3 = Color3.fromRGB(255,255,255)
            Btn.Font = Enum.Font.SourceSans
            Btn.TextSize = 12
            Instance.new("UICorner", Btn).CornerRadius = UDim.new(0,6)
            Btn.MouseButton1Click:Connect(function()
                if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
                    LocalPlayer.Character.HumanoidRootPart.CFrame = plr.Character.HumanoidRootPart.CFrame + Vector3.new(2,0,0)
                end
            end)
        end
    end
    TeleportList.CanvasSize = UDim2.new(0,0,0,TeleportLayout.AbsoluteContentSize.Y+5)
end

Players.PlayerAdded:Connect(refreshTeleport)
Players.PlayerRemoving:Connect(refreshTeleport)
refreshTeleport()

--// ========= SPECTATE LIST =========
local SpecTitle = Instance.new("TextLabel", MainFrame)
SpecTitle.Text = "Spectate Players"
SpecTitle.Size = UDim2.new(0, 200, 0, 20)
SpecTitle.Position = UDim2.new(0, 240, 0, 70)
SpecTitle.BackgroundTransparency = 1
SpecTitle.TextColor3 = Color3.fromRGB(255,255,255)
SpecTitle.Font = Enum.Font.SourceSansBold
SpecTitle.TextSize = 14

local SpecList = Instance.new("ScrollingFrame", MainFrame)
SpecList.Size = UDim2.new(0, 200, 0, 170)
SpecList.Position = UDim2.new(0, 240, 0, 95)
SpecList.BackgroundColor3 = Color3.fromRGB(30,30,30)
SpecList.ScrollBarThickness = 4
Instance.new("UICorner", SpecList).CornerRadius = UDim.new(0,6)

local SpecLayout = Instance.new("UIListLayout", SpecList)
SpecLayout.Padding = UDim.new(0,3)

local StopBtn = Instance.new("TextButton", MainFrame)
StopBtn.Size = UDim2.new(0, 200, 0, 25)
StopBtn.Position = UDim2.new(0, 240, 0, 270)
StopBtn.BackgroundColor3 = Color3.fromRGB(200,50,50)
StopBtn.TextColor3 = Color3.fromRGB(255,255,255)
StopBtn.Font = Enum.Font.SourceSansBold
StopBtn.TextSize = 13
StopBtn.Text = "â›” Stop Spectating"
Instance.new("UICorner", StopBtn).CornerRadius = UDim.new(0,6)

local spectating = nil
local function refreshSpectate()
    for _, c in pairs(SpecList:GetChildren()) do
        if c:IsA("TextButton") then c:Destroy() end
    end
    for _, plr in pairs(Players:GetPlayers()) do
        if plr ~= LocalPlayer then
            local Btn = Instance.new("TextButton", SpecList)
            Btn.Size = UDim2.new(1,-5,0,22)
            Btn.Text = "Spectate "..plr.DisplayName
            Btn.BackgroundColor3 = Color3.fromRGB(120,70,70)
            Btn.TextColor3 = Color3.fromRGB(255,255,255)
            Btn.Font = Enum.Font.SourceSans
            Btn.TextSize = 12
            Instance.new("UICorner", Btn).CornerRadius = UDim.new(0,6)
            Btn.MouseButton1Click:Connect(function()
                if plr.Character and plr.Character:FindFirstChildOfClass("Humanoid") then
                    game.Workspace.CurrentCamera.CameraSubject = plr.Character:FindFirstChildOfClass("Humanoid")
                    spectating = plr
                end
            end)
        end
    end
    SpecList.CanvasSize = UDim2.new(0,0,0,SpecLayout.AbsoluteContentSize.Y+5)
end

Players.PlayerAdded:Connect(refreshSpectate)
Players.PlayerRemoving:Connect(refreshSpectate)
refreshSpectate()

StopBtn.MouseButton1Click:Connect(function()
    spectating = nil
    if LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Humanoid") then
        game.Workspace.CurrentCamera.CameraSubject = LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
    end
end)
