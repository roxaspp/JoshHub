-- Services
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "TeleportUI"
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

-- Main Frame (malaking UI box)
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 300, 0, 400)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -200)
MainFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
MainFrame.BorderSizePixel = 0
MainFrame.Parent = ScreenGui

-- Title
local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 0, 40)
Title.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Title.Text = "Teleporter + Auto Accept"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 18
Title.Parent = MainFrame

-- Minimize Button
local MinimizeBtn = Instance.new("TextButton")
MinimizeBtn.Size = UDim2.new(0, 40, 0, 40)
MinimizeBtn.Position = UDim2.new(1, -45, 0, 0)
MinimizeBtn.Text = "-"
MinimizeBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
MinimizeBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
MinimizeBtn.Parent = Title

-- Circular Logo (lalabas lang pag minimized)
local LogoBtn = Instance.new("TextButton")
LogoBtn.Size = UDim2.new(0, 50, 0, 50)
LogoBtn.Position = UDim2.new(0, 20, 0.8, 0)
LogoBtn.Text = "O"
LogoBtn.TextScaled = true
LogoBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
LogoBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
LogoBtn.BackgroundTransparency = 0
LogoBtn.Visible = false -- nakatago muna
LogoBtn.Parent = ScreenGui
LogoBtn.AutoButtonColor = true
LogoBtn.TextWrapped = true
LogoBtn.ClipsDescendants = true
LogoBtn.AnchorPoint = Vector2.new(0.5, 0.5)
LogoBtn.TextYAlignment = Enum.TextYAlignment.Center
LogoBtn.TextXAlignment = Enum.TextXAlignment.Center
LogoBtn.Font = Enum.Font.SourceSansBold

-- Auto Accept (sample placeholder text)
local AutoAcceptLabel = Instance.new("TextLabel")
AutoAcceptLabel.Size = UDim2.new(1, -20, 0, 30)
AutoAcceptLabel.Position = UDim2.new(0, 10, 0, 50)
AutoAcceptLabel.Text = "Auto Accept: ON"
AutoAcceptLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
AutoAcceptLabel.Font = Enum.Font.SourceSans
AutoAcceptLabel.TextSize = 18
AutoAcceptLabel.BackgroundTransparency = 1
AutoAcceptLabel.Parent = MainFrame

-- Scroll for player list
local PlayerList = Instance.new("ScrollingFrame")
PlayerList.Size = UDim2.new(1, -20, 1, -100)
PlayerList.Position = UDim2.new(0, 10, 0, 90)
PlayerList.CanvasSize = UDim2.new(0, 0, 0, 0)
PlayerList.ScrollBarThickness = 6
PlayerList.Parent = MainFrame

-- Function to update player buttons
local function UpdatePlayers()
    PlayerList:ClearAllChildren()
    local y = 0
    for _, player in pairs(Players:GetPlayers()) do
        if player ~= LocalPlayer then
            local Btn = Instance.new("TextButton")
            Btn.Size = UDim2.new(1, -10, 0, 30)
            Btn.Position = UDim2.new(0, 5, 0, y)
            Btn.Text = player.Name
            Btn.Parent = PlayerList

            Btn.MouseButton1Click:Connect(function()
                local character = LocalPlayer.Character
                if character and character:FindFirstChild("HumanoidRootPart") and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                    character.HumanoidRootPart.CFrame = player.Character.HumanoidRootPart.CFrame + Vector3.new(0, 3, 0)
                end
            end)

            y = y + 35
        end
    end
    PlayerList.CanvasSize = UDim2.new(0, 0, 0, y)
end

Players.PlayerAdded:Connect(UpdatePlayers)
Players.PlayerRemoving:Connect(UpdatePlayers)
UpdatePlayers()

-- Minimize Logic
MinimizeBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
    LogoBtn.Visible = true
end)

LogoBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = true
    LogoBtn.Visible = false
end)
